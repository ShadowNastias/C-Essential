<Window x:Class="Lesson12.Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Калькулятор" Height="350" Width="450">
    <Grid>
        <TextBox x:Name="inputTextBox1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" Width="200" />
        <TextBox x:Name="inputTextBox2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,10,10,0" Width="200" />
        <Button Content="+" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="50" Margin="10,60,0,0" Click="AddButton_Click" />
        <Button Content="-" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="50" Margin="95,60,0,0" Click="SubtractButton_Click" />
        <Button Content="*" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="50" Margin="180,60,0,0" Click="MultiplyButton_Click" />
        <Button Content="/" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="50" Margin="265,60,0,0" Click="DivideButton_Click" />
        <Button Content="=" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="50" Margin="350,60,0,0" Click="EqualsButton_Click" />
        <TextBlock x:Name="resultTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,120,0,0" Width="400" FontSize="24" />
    </Grid>
</Window>
