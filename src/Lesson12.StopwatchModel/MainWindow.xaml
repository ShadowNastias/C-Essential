<Window x:Class="Lesson12.StopwatchModel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Секундомір" Height="200" Width="300">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock x:Name="timeTextBlock" Text="00:00:00.00" FontSize="36" HorizontalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="startButton" Content="Старт" Margin="10" Click="StartButton_Click"/>
            <Button x:Name="stopButton" Content="Стоп" Margin="10" Click="StopButton_Click"/>
            <Button x:Name="resetButton" Content="Скидання" Margin="10" Click="ResetButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>